generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Product {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  code          Int             @unique
  oldPrice      Float           @default(0)
  price         Float
  images        Image[]
  category      String
  createdAt     DateTime        @default(now())
  // pedidos       Order[]
}

model Image {
  id            Int             @id @default(autoincrement())
  url           String          
  productId     Int
  product       Product         @relation(fields: [productId], references: [id])
}

